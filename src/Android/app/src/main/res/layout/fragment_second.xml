<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">


    <TextView
        android:id="@+id/textview_pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Pattern: 0"
        app:layout_constraintBottom_toTopOf="@id/decrease_pattern"
        app:layout_constraintTop_toBottomOf="@id/increase_pattern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/increase_pattern"
        android:layout_width="215dp"
        android:layout_height="83dp"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@+id/textview_pattern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

<!--    <Button-->
<!--        android:id="@+id/button_second"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="@string/previous"-->
<!--        app:layout_editor_absoluteX="20dp"-->
<!--        app:layout_editor_absoluteY="10dp"-->
<!--        tools:ignore="MissingConstraints" />-->

    <Button
        android:id="@+id/decrease_pattern"
        android:layout_width="215dp"
        android:layout_height="83dp"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_pattern" />
</androidx.constraintlayout.widget.ConstraintLayout>